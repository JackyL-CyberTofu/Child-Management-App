<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/relaxing_water_background"
    tools:context=".view.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_layout"
        android:layout_width="154dp"
        android:layout_height="347dp"
        android:layout_marginTop="57dp"
        android:layout_marginBottom="224dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.151">

        <Button
            android:id="@+id/coin_flip_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/PaleBlue"
            android:text="@string/coinflip"
            app:icon="@drawable/ic_baseline_coin_24"
            app:layout_constraintBottom_toTopOf="@+id/task_list_button"
            app:layout_constraintEnd_toEndOf="@+id/timeout_button"
            app:layout_constraintStart_toStartOf="@+id/timeout_button"
            app:layout_constraintTop_toBottomOf="@+id/timeout_button" />

        <Button
            android:id="@+id/children_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/PaleBlue"
            android:text="@string/children"
            app:icon="@drawable/ic_baseline_people_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/timeout_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_weight="1"
            android:backgroundTint="@color/PaleBlue"
            android:text="@string/timeout"
            app:icon="@drawable/ic_baseline_access_time_24"
            app:layout_constraintEnd_toEndOf="@+id/children_button"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/children_button"
            app:layout_constraintTop_toBottomOf="@+id/children_button" />

        <Button
            android:id="@+id/task_list_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:text="@string/tasks_button_label"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>