<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.sfu.cmpt276.be.parentapp">
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:allowBackup="true"
        android:fullBackupOnly="true"
        android:icon="@mipmap/ic_parent_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_parent_app_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BeParentApp">
        <activity
            android:name=".FlipHistoryActivity"
            android:exported="false"
            android:label="History"/>
        <activity
            android:name=".TimeoutActivity"
            android:exported="false"
            android:label="@string/Timeout"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".ChildListActivity"
            android:exported="false" />
        <activity
            android:name=".CoinFlipActivity"
            android:exported="false"
            android:theme="@style/Theme.BeParentApp.NoActionBar"
            android:label="Coin Flip"/>
        <activity
            android:name=".ChildEditActivity"
            android:exported="false"/>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="Parent App" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service android:name=".TimeoutService" />
        <service android:name=".AlarmService" />

    </application>

</manifest>